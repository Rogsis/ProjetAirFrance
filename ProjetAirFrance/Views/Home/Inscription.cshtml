
@{
    ViewBag.Title = "DetailVol";
}

<div class="container">

    <h1 class="display-4">Inscription :</h1>

    <br />

    <div class="card">
        <div class="card-header">
            Inscription au vol N° <span class="badge badge-pill badge-success">54156</span>
        </div>
        <div class="card-body">
            <h1 class="display-4">PARIS (CDG) <i class="fas fa-plane"></i> NEW YORK (JFK)</h1>
            <br />
            <p class="lead">Vos informations :</p>
            <form>
                <div class="form-group">
                    <label for="nom">Nom : </label>
                    <input type="text" class="form-control" id="nom" name="nom" placeholder="Saisissez votre nom" required>
                </div>
                <div class="form-group">
                    <label for="prenom">Prenom : </label>
                    <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Saisissez votre prenom" required>
                </div>
                <div class="form-group">
                    <label for="date">Date de naissance : </label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <button type="submit" class="btn btn-success">Réserver ma place</button>
            </form>

        </div>
    </div>
</div>


